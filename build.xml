<project name="nms" default="all" basedir=".">
    <target name="tools">
	<javac srcdir="${src-dir}/tools" destdir="${work-dir}/build" debug="yes">
                <classpath>
                        <pathelement location="${work-dir}/build"/>
                </classpath>
        </javac>
    </target>
    <target name="tools-jar" depends="tools">
        <jar destfile="${work-dir}/release/tools.jar" basedir="${work-dir}/build" includes="com/novel/tools/**"/>
    </target>

    <target name="jar" depends="tools-jar"/>
    <target name="all" depends="tools"/>
</project>