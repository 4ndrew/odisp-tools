<project name="nms" default="all" basedir=".">
    <property file="../build.properties"/>
    <property name="tools-src" location="./"/>
    <path id="tools-src">
	<pathelement location="${tools-src}/**.java"/>
    </path>
    <target name="tools">
	<javac srcdir="${tools-src}" destdir="${build-dir}" debug="yes">
                <classpath>
                        <pathelement location="${build-dir}"/>
                </classpath>
        </javac>
    </target>
    <target name="tools-jar" depends="tools">
        <jar destfile="${release-dir}/tools.jar" basedir="${build-dir}/" includes="com/novel/tools/**"/>
    </target>
    <target name="doc"/>
    <target name="jar" depends="tools-jar"/>
    <target name="all" depends="tools"/>
</project>