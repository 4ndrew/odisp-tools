<project name="nms" default="all" basedir=".">
    <property name="tools-src" location="./"/>
    <path id="tools-src">
	<pathelement location="${tools-src}/**.java"/>
    </path>
    <target name="tools">
	<javac srcdir="${tools-src}" destdir="${build-dir}" debug="yes">
                <classpath>
                        <pathelement location="${build-dir}"/>
                </classpath>
        </javac>
    </target>
    <target name="doc"/>
    <target name="all" depends="tools"/>
</project>